---
import AlbumCard from '../../components/AlbumCard.astro';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import Header from '../../components/Header.astro';
import { getPublishedAlbums } from '../../utils/albums';

const albums = await getPublishedAlbums();
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title="Photos" description="Photo albums from travels and adventures." />
  </head>
  <body>
    <Header />
    <main>
      <h1>Photos</h1>

      {
        albums.length === 0 ? (
          <p class="empty">No albums yet. Check back soon.</p>
        ) : (
          <div class="album-grid">
            {albums.map((album) => (
              <AlbumCard album={album} />
            ))}
          </div>
        )
      }
    </main>
    <Footer />
  </body>
</html>

<style>
  h1 {
    margin-bottom: 1.5rem;
  }

  .empty {
    color: rgb(var(--gray));
    font-size: 1.1rem;
  }

  .album-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
  }

  @media (max-width: 720px) {
    .album-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
