---
import FormattedDate from './FormattedDate.astro';
import Tag from './Tag.astro';
import { getPublishedPosts } from '../utils/posts';

interface Props {
  tags: string[];
  currentId: string;
}

const { tags, currentId } = Astro.props;

const allPosts = await getPublishedPosts();
const related = allPosts
  .filter((post) => post.id !== currentId && post.data.tags?.some((t) => tags.includes(t)))
  .slice(0, 3);
---

{
  related.length > 0 && (
    <section class="related-posts">
      <h2>More posts</h2>
      <div class="related-list">
        {related.map((post) => (
          <a href={`/blog/${post.id.replace(/\.mdx?$/, '')}/`} class="related-card">
            <span class="related-title">{post.data.title}</span>
            <span class="related-date">
              <FormattedDate date={post.data.pubDate} />
            </span>
            {post.data.description && (
              <span class="related-description">{post.data.description}</span>
            )}
            {(post.data.tags?.length ?? 0) > 0 && (
              <span class="related-tags">
                {post.data.tags.map((tag) => (
                  <Tag tag={tag} />
                ))}
              </span>
            )}
          </a>
        ))}
      </div>
    </section>
  )
}

<style>
  .related-posts {
    margin-top: 3rem;
    padding-top: 1.5rem;
    border-top: 1px solid rgba(156, 163, 175, 0.3);
  }

  .related-posts h2 {
    font-size: 1.2rem;
    margin-bottom: 1rem;
  }

  .related-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .related-card {
    display: block;
    text-decoration: none;
    padding: 1rem 1.25rem;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 8px;
    transition: border-color 0.15s ease;
  }

  .related-card:hover {
    border-color: rgba(255, 255, 255, 0.2);
  }

  .related-title {
    display: block;
    color: rgb(var(--black));
    font-weight: 600;
    margin-bottom: 0.25rem;
  }

  .related-date {
    display: block;
    color: rgb(var(--gray));
    font-size: 0.85rem;
    margin-bottom: 0.5rem;
  }

  .related-description {
    display: block;
    color: rgb(var(--gray));
    font-size: 0.9rem;
    line-height: 1.5;
  }

  .related-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
    margin-top: 0.75rem;
  }
</style>
