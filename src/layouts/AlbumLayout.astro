---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import PhotoGrid from '../components/PhotoGrid.astro';
import Tag from '../components/Tag.astro';

type Props = CollectionEntry<'photos'>['data'];

const { title, description, pubDate, location, tags, photos } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description || `Photo album: ${title}`} />
    <style>
      main {
        width: calc(100% - 2em);
        max-width: 100%;
        margin: 0;
      }

      .album-container {
        width: 960px;
        max-width: calc(100% - 2em);
        margin: auto;
        padding: 1em;
      }

      .back-link {
        display: inline-block;
        font-size: 0.9rem;
        margin-bottom: 1.5rem;
      }

      .album-header {
        margin-bottom: 2rem;
      }

      .album-meta {
        color: rgb(var(--gray));
        font-size: 0.9rem;
        margin-bottom: 0.5rem;
      }

      .album-location {
        color: rgb(var(--gray));
      }

      .album-header h1 {
        margin: 0.5rem 0;
        font-size: 2rem;
        line-height: 1.2;
      }

      .album-tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin-top: 0.75rem;
      }

      .album-description {
        color: rgb(var(--gray));
        font-size: 1.05rem;
        margin-top: 1rem;
        line-height: 1.6;
      }

      .album-narrative {
        max-width: 720px;
        margin-bottom: 2rem;
        color: rgb(var(--gray-dark));
        line-height: 1.7;
      }

      .album-narrative :global(p) {
        margin-bottom: 1rem;
      }
    </style>
  </head>

  <body>
    <Header />
    <main>
      <div class="album-container">
        <a href="/photos/" class="back-link">&larr; All albums</a>

        <div class="album-header">
          <div class="album-meta">
            <FormattedDate date={pubDate} />
            {location && <span class="album-location"> Â· {location}</span>}
          </div>
          <h1>{title}</h1>
          {
            tags.length > 0 && (
              <div class="album-tags">
                {tags.map((tag) => (
                  <Tag tag={tag} />
                ))}
              </div>
            )
          }
          {description && <p class="album-description">{description}</p>}
        </div>

        <div class="album-narrative">
          <slot />
        </div>

        <PhotoGrid photos={photos} />
      </div>
    </main>
    <Footer />
  </body>
</html>
